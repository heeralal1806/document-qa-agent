# ==============================================
# Document Q&A AI Agent - Environment Configuration
# ==============================================

# ==============================================
# API Keys (Required)
# ==============================================
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get your Gemini API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# LLM Configuration
# ==============================================
# Choose provider: 'openai' or 'gemini'
LLM_PROVIDER=openai

# OpenAI Model Options: 'gpt-4o', 'gpt-4o-mini', 'gpt-4-turbo', 'gpt-3.5-turbo'
MODEL_NAME=gpt-4o-mini

# Gemini Model Options: 'gemini-1.5-pro', 'gemini-1.5-flash', 'gemini-1.0-pro'
GEMINI_MODEL_NAME=gemini-1.5-flash

# Generation Parameters
TEMPERATURE=0.1
MAX_TOKENS=2000
TOP_P=0.95

# ==============================================
# Application Settings
# ==============================================
HOST=0.0.0.0
PORT=8000
DEBUG=False
WORKERS=1

# ==============================================
# Document Processing
# ==============================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=pdf
MAX_PAGES_PER_DOCUMENT=100

# ==============================================
# Caching Configuration
# ==============================================
CACHE_ENABLED=True
CACHE_TYPE=memory  # Options: 'memory', 'disk', 'redis'
CACHE_TTL=3600  # Cache TTL in seconds (1 hour)
DISK_CACHE_DIR=data/cache

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # Window size in seconds

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==============================================
# Security
# ==============================================
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=*

